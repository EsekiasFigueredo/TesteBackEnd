@model TesteFullBar.VMs.AlunoVM

@{
    ViewData["Title"] = "Informações Sobre o Aluno";
}

<h1>Informações Sobre o Aluno</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RA)
        </dd>
        <dt class = "col-sm-2">
            Periodo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Periodo)
        </dd>
        <dt class = "col-sm-2">
            Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Curso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Disciplina Reprovação
        </dt>
        <dd class="col-sm-10">
            @if (Model.DiciplinasReprovados != null)
            {
                @foreach (var disc in Model.DiciplinasReprovados)
                {
                                        
                        @Html.DisplayFor(model => disc)<br />
                                        
                }
            }
            <p></p>
        </dd>
       
    </dl>
</div>
<div class="col-md-3">
        <div>
            <p> <strong>Foto Aluno </strong> </p>

        </div>
        <img src="/imgAlunos/@Html.DisplayFor(model => model.Foto)" style="width: 120px; height: 120px; border-radius: 71px;" alt="Client-Profile-Image" />
</div>
<p> </p>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
