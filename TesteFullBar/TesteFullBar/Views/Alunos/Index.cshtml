@model IEnumerable<TesteFullBar.VMs.AlunoVM>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h1>Lista de Alunos</h1>
<form class="form-row" asp-action="Index" method="post">
    <table class="table table-striped">
        <thead>
           
            <tr>
                <th><input type="text" size="1" placeholder="Nome" name="nome" class="mr-0 form-control"></th>
                <th><input type="text" size="1" placeholder="RA" name="ra" class="mr-0 form-control" ></th>
                <th><input type="text" size="1" placeholder="Curso" name="curso" class="mr-0 form-control"></th> 
                <th>
                <button type="submit" value="Buscar" class="btn btn-primary"><i class="fa fa-search" ></i>Buscar</button>
                </th>
            </tr>
        </thead>
                                    
    </table>
</form>

<p>
    <a asp-action="Create">Adicionar Novo Aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                Curso
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a> |
                <a asp-controller="NotaAlunos" asp-action="Index" asp-route-id="@item.Id">Adicionar Nota</a>
            </td>
        </tr>
}
    </tbody>
</table>
