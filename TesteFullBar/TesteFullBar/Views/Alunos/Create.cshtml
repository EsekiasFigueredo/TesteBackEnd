@model TesteFullBar.Models.Aluno

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Aluno</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RA" class="control-label"></label>
                <input asp-for="RA" class="form-control" />
                <span asp-validation-for="RA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Periodo</label>
                 <select asp-for="Periodo" class="col-md-10 form-control" asp-items="ViewBag.Periodos">
                        <option value="">[Selecione]</option>
                 </select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso_Id" class="control-label">Curso</label>
                 <select asp-for="Curso_Id" class="col-md-10 form-control" asp-items="ViewBag.Cursos">
                        <option value="">[Selecione]</option>
                 </select>
                <span asp-validation-for="Curso_Id" class="text-danger"></span>
            </div>            
            <div class="form-group row">
                <label for="id_image" class="col-sm-6 col-form-label">Foto do Aluno</label>
                    <div>
                        <div class="form-group row">
                            <input type="file" id="id_image" name="image" accept="image/*" class="col-sm-1 form-control " data-toggle="modal" data-target="#modalExemplo"><br>
                        </div>
                    </div>
            </div>
            <div>

            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Informações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
