@model TesteFullBar.Models.Aluno

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RA" class="control-label"></label>
                <input asp-for="RA" class="form-control" />
                <span asp-validation-for="RA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Periodo</label>
                 <select asp-for="Periodo" class="col-md-10 form-control" asp-items="ViewBag.Periodos">
                        <option value="">[Selecione]</option>
                 </select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso_Id" class="control-label">Curso</label>
                 <select asp-for="Curso_Id" class="col-md-10 form-control" asp-items="ViewBag.Cursos">
                        <option value="">[Selecione]</option>
                 </select>
                <span asp-validation-for="Curso_Id" class="text-danger"></span>
            </div>            
            <div class="form-group row">
                <label for="Foto" class="col-sm-6 col-form-label">Foto do Aluno</label>
                <div>
                    <div class="form-group row">
                        <input type="file" id="Foto" name="imagem" accept="image/png, image/jpeg, image/jpg" class="col-sm-1 form-control " data-toggle="modal" data-target="#modalExemplo"><br>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
