@model IEnumerable<TesteFullBar.Models.Disciplina>

@{
    ViewData["Title"] = "Index";
}

<h1>Disciplinas</h1>

<p>
    <a asp-action="Create">Adicionar Nova Disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Disciplina
            </th>
            <th>
                Média Mínima para Aprovação
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Disciplina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota_Minima)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
