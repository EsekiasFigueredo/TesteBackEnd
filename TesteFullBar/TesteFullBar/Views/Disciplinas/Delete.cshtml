@model TesteFullBar.Models.Disciplina

@{
    ViewData["Title"] = "Deletar";
}


<h3>Deseja deletar essa Disicplina?</h3>
<div>
    <h4>Disciplina</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Disciplina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Disciplina)
        </dd>
        <dt class = "col-sm-2">
            Média Mínima
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota_Minima)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar á Lista</a>
    </form>
</div>
