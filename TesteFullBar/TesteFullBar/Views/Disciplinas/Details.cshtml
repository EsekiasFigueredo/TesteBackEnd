@model TesteFullBar.Models.Disciplina

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Disciplina</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Disciplina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Disciplina)
        </dd>
        <dt class = "col-sm-2">
            Média Mínima
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota_Minima)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar á Lista</a>
</div>
