@model TesteFullBar.VMs.CursoVM

@{
    ViewData["Title"] = "Detalhes dos Curso";
}
<h1>Informações Sobre o Curso</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Curso)
        </dd>
        <dt class = "col-sm-2">
            Disciplinas 
        </dt>
        <dd class="col-sm-10">
            @if (Model.Disciplinas != null)
            {
                @foreach (var disc in Model.Disciplinas)
                {
                                        
                        @Html.DisplayFor(model => disc)<br />
                                        
                }
            }
            <p></p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
